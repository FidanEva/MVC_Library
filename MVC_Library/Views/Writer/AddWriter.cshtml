@model MVC_Library.Models.Entity.tbl_writer
@{
    ViewBag.Title = "AddWriter";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<style>
    .btn{
        font-size: 1.5rem;
    }
</style>
<h2 style="margin-top: 25px">Add Writer</h2>

<form class="form-group" method="post">
    @*<div style="margin-top: 20px">
        <label>ID</label>;
        @Html.TextBoxFor(k => k.id, new { @class="form-control"});
    </div>*@

    <div style="margin-top: 20px">
        <label>Name</label>
        @Html.TextBoxFor(k => k.name, new { @class="form-control"})
    </div>

    <div style="margin-top: 20px">
        <label>Surname</label>
        @Html.TextBoxFor(k => k.surname, new { @class = "form-control"})
    </div>

    <div style="margin-top: 20px">
        <label>Details</label>
        @Html.TextAreaFor(k => k.detail, new { @class = "form-control"})
    </div>

    <div class="d-flex justify-content-between" style="margin-top: 20px">
        <button class="btn btn-info" id="btn2">Add new writer</button>
        <a href="/Writer/Index" class="btn btn-success">Back to list</a>
    </div>
</form>


