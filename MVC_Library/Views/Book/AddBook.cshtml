<h2>Add Book</h2>

<form class="form-group"method="post">
    <div style="margin: 10px auto">
        <label>Name</label>
        @Html.TextBoxFor(k => k.name, new { @class = "form-control" })
    </div>
    <div style="margin: 10px auto">
        <label>Writer</label>
        @Html.DropDownListFor(k => k.writer, (List<SelectListItem>)ViewBag.writers, new { @class = "form-control" })
    </div>
    <div style="margin: 10px auto">
        <label>Category</label>
        @Html.DropDownListFor(k => k.category, (List<SelectListItem>)ViewBag.categories, new { @class = "form-control" })
        @*@Html.DropDownListFor(k => k.tbl_category.id, (List<SelectListItem>)ViewBag.categories, new { @class = "form-control" })*@
    </div>
    <div style="margin: 10px auto">
        <label>Publication year</label>
        @Html.TextBoxFor(k => k.publication_year, new { @class = "form-control" })
    </div>
    <div style="margin: 10px auto">
        <label>Publisher</label>
        @Html.TextBoxFor(k => k.publisher, new { @class = "form-control" })
    </div>
    <div style="margin: 10px auto">
        <label>Page</label>
        @Html.TextBoxFor(k => k.page, new { @class = "form-control" })
    </div>
    <input type="hidden" name="book_status" value="True"/>
    <div class="d-flex justify-content-between">
        <button class="btn btn-warning">Add book</button>
        <a href ="/Book/Index"class="btn btn-success">Back to list</a>
    </div>
</form>

